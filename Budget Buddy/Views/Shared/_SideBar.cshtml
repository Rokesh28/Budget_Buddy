<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
             target=".dock-target" enableGestures="true">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo d-flex">
                <img class="piggy-pic" src="~/piggy-bank.svg" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <img class="profile-pic" src="~/passport_size_photo.jpg" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mt-1 mb-1">Rokesh Prakash</h6>
                <div class="d-flex justify-content-center align-items-center">
                    <i class="fa-solid fa-wallet fa-2x mt-1 px-2"></i>
                    <span class="text-muted mt-1">@ViewBag.Balance</span>
                </div>
               
            </div>
        </div>

        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>document.addEventListener('DOMContentLoaded',function (){
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });</script>
